datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  incomes   Income[]
  transactions Transaction[]
}

model Category {
  id        Int          @id @default(autoincrement())
  name      String       @unique
  createdAt DateTime     @default(now())
  transactions Transaction[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Float
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
  description String?
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Income {
  id        Int      @id @default(autoincrement())
  amount    Float
  source    String
  date      DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}